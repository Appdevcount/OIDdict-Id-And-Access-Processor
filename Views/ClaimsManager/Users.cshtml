@using Identity_And_Access_Management
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>User Claims</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            @*<th>Claims</th>*@
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>@user.Email</td>
                @*<td>@string.Join(" , ", user.Roles.ToList())</td>*@
                <td>
                    <a class="btn btn-primary" asp-controller="ClaimsManager" asp-action="ManageUsers" asp-route-userId="@user.UserId">Manage Claims</a>
                </td>
            </tr>
        }
    </tbody>
</table>