@using Identity_And_Access_Management
@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Role Claims</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Role Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Name</td>
                <td>
                    <a class="btn btn-primary" asp-controller="ClaimsManager" asp-action="ManageRoles" asp-route-roleId="@user.Id">Manage Claims</a>
                </td>
            </tr>
        }
    </tbody>
</table>